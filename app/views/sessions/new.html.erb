<div class="container row login-container">
  <div class="col-sm-6">
    <%= image_tag "connection_image.png", class:"connection_image" %>
  </div>
  <%= form_with(scope: :session, url: sessions_path, local: true,
  class: "col-sm-5 offset-1 login_form") do |form| %>
    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <%= form.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <%= form.password_field :password, class:"form-control" %>
    </div>
    <div class="form-group form-check">
      <input type="checkbox" class="form-check-input" id="exampleCheck1">
      <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <div class="submit_btn_container">
      <%= form.submit value:"ログイン", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
