<% @pictures.each do |p| %>
  <div style="border: 2px solid skyblue;">
    <%= image_tag "default_user.png", class: "user_image", size: "40x40" %>
    <span style="color: red;"><%= p.user.name %></span>
    <p><%= p.sentence %></p>
    <div><%= image_tag p.image.url %></div>
    <%= link_to 'edit', edit_picture_path(p.id) %>
    <%= link_to 'delete', picture_path(p.id), method: :delete %>
  </div>
<% end %>
